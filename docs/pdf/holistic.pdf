  \header{Why (Yet) Another (Type of) Treebank?}
  \vspace{0.5em}
\ifteaser\else
  \begin{center}
    \setlength{\fboxsep}{15pt}
    \shadowbox{%
      \begin{minipage}[t]{23cm}
        \centerline{\bf Requirements for Disambiguation}
        \vspace{0.8ex}
        \begin{itemize}
          \item {\bf syntax vs.\ semantics}\hspace{1em}
                topicalization vs.\ attachment ambiguity;
          \vspace{0.3ex}
          \item {\bf granularity}\hspace{1em}
                adequate match to degree of granularity in grammar;
          \vspace{0.3ex}
          \item {\bf adaptability}\hspace{1em}
                map into various formats; semi-automated updates.
        \end{itemize}
      \end{minipage}}\\[2ex]
    \shadowbox{%
      \begin{minipage}[t]{23cm}
        \centerline{\bf Existing Resources (PTB, SUSANNE, NeGra, PDT,
                     et al.)}
        \vspace{0.8ex}
        \begin{itemize}
          \item {\bf (primarily) mono-stratal}\hspace{1em}
                topological {\em or\/} tectogrammatical;
          \vspace{0.3ex}
          \item {\bf (relatively) shallow}\hspace{1em}
                limited syntax, little or no semantics;
          \vspace{0.3ex}
          \item {\bf (mostly) static}\hspace{1em}
                (manual) ground truth annotation, no evolution.
        \end{itemize}
      \end{minipage}}
  \end{center}
